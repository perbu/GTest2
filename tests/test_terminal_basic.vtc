vtest "Basic terminal emulation test"

# Test 1: Simple echo with terminal emulation
process p1 {echo Hello} -ansi-response -start
process p1 -expect-text 0 0 "Hello"
process p1 -screen_dump
process p1 -wait

# Test 2: Cat program (interactive, stays open)
process p2 {cat} -ansi-response -start
process p2 -write "Line1"
process p2 -writehex 0a
process p2 -expect-text 0 0 "Line1"
process p2 -write "Line2"
process p2 -writehex 0a
process p2 -expect-text 1 0 "Line2"
process p2 -screen_dump
process p2 -kill
